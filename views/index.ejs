<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="./styles/shared-style.css" />
    <title>Home</title>
  </head>
  <body>
    <%- include('layouts/nav') %>
    <main>
      <div class="container my-5">
        <h1 class="text-center mb-4">Vacation Destinations</h1>
        <div class="d-flex flex-wrap justify-content-between">
          <% sites.forEach(({id, imgPath, name, description, price}) => { %>
          <div class="card mb-3" style="max-width: 20rem">
            <img
              src="./img/<%= imgPath %>"
              class="card-img-top"
              alt="Site Image"
              height="400px"
            />
            <div class="card-body">
              <h5 class="card-title"><%= name %></h5>
              <p class="card-text"><%= description %></p>
              <p class="card-text"><b>$<%= price %></b></p>
              <% if(loggedIn) {%>
              <a href="/book?siteId=<%= id %>" class="btn btn-primary"
                >Book Now</a
              >
              <%} else {%>
              <a href="/signin" class="btn btn-primary">Sign In To Book Now</a>
              <%}%>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </main>
    <%- include('layouts/footer'); -%> <%- include('layouts/scripts'); -%>
  </body>
</html>
