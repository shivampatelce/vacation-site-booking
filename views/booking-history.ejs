<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="./styles/shared-style.css" />
    <title>Booking History</title>
  </head>
  <body>
    <%- include('layouts/nav') %>
    <main>
      <div class="container my-5">
        <h1 class="text-center mb-4">Booking History</h1>
        <% if(bookings.length) {%>
        <div class="d-flex flex-wrap justify-content-between">
          <% bookings.forEach((booking) => { %>
          <div class="card mb-3" style="max-width: 20rem">
            <img
              src="./img/<%= booking.siteDetail.imgPath %>"
              class="card-img-top"
              alt="Site Image"
              height="400px"
            />
            <div class="card-body">
              <h5 class="card-title"><%= booking.siteDetail.name %></h5>
              <p class="card-text">
                Paid Amount: <b>$<%= booking.payment.amount %></b>
              </p>

              <p class="card-text">
                Booking Date:
                <b
                  ><%= new
                  Date(booking.booking_date).toLocaleDateString('en-CA') %></b
                >
              </p>

              <p class="card-text">
                Representative:
                <b
                  ><%= booking.representativeDetail.name %> (PHONE NO: <%=
                  booking.representativeDetail.phone_number %>)</b
                >
              </p>

              <a
                href="/generate-receipt?bookingId=<%= booking.id %>"
                class="btn btn-primary"
                >Receipt</a
              >
            </div>
          </div>
          <% }) %>
        </div>
        <% } else {%>
        <div class="text-center m-5">
          <h4 class="text-muted">No previous bookings found.</h4>
        </div>
        <% } %>
      </div>
    </main>
    <%- include('layouts/footer'); -%> <%- include('layouts/scripts'); -%>
  </body>
</html>
